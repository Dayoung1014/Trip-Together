<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.ssafy.enjoytrip.hotplace.model.mapper.HotplaceFileMapper">


	<resultMap type="hotplaceFileDto" id="hotplaceFile">
		<result column="hotplace_id" property="hotplaceId"/>
		<result column="fid" property="fid"/>
		<result column="name" property="name"/>
		<result column="path" property="path"/> 
	</resultMap>
	
 	<insert id="registImg" parameterType="hotplaceFileDto">
		insert into hotplace_file (hotplace_id, name, path)
		values (#{hotplaceId}, #{name}, #{path})
	</insert>
	
	<delete id="deleteImg" parameterType="String">
		delete from hotplace_file
		where fid = #{fid}
	</delete>
   
	<select id="listImg" parameterType="String" resultMap="hotplaceFile">
		select *
		from hotplace_file
		where hotplace_id = #{hotplaceId};
	</select>
	
	
	
</mapper>